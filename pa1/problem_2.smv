

MODULE main

 
VAR 
	xoba: { isi, iju };
	yoba: { isi, iju };
	zoba: { isi, iju };
	xoba_padawan : { isi, iju };
	yoba_padawan :{ isi, iju };
	zoba_padawan : { isi, iju };

	driver : {mv_xoba_pedawan, mv_yoba_pedawan, mv_zoba_pedawan, mv_xoba, mv_yoba, mv_zoba};
	passenger : {mv_xoba, mv_yoba, mv_zoba,  mv_xoba_pedawan, mv_yoba_pedawan, mv_zoba_pedawan, empty};

	vessel : {isi, iju};

	
	

ASSIGN
	init(xoba) := isi;
	init(yoba) := isi;
	init(zoba) := isi;
	init(xoba_padawan) := isi;
	init(yoba_padawan) := isi;
	init(zoba_padawan) := isi;
	init(vessel) := isi ;

	next(vessel) := case 
		(vessel = isi)  & ((driver= mv_xoba & xoba =vessel) | (driver= mv_yoba & yoba =vessel) | (driver= mv_zoba & zoba =vessel) | (driver= mv_xoba_pedawan & xoba_padawan =vessel) | (driver= mv_yoba_pedawan & yoba_padawan =vessel) | (driver= mv_xoba_pedawan & zoba_padawan =vessel)): iju ;
		(vessel = iju) & ((driver= mv_xoba & xoba =vessel) | (driver= mv_yoba & yoba =vessel) | (driver= mv_zoba & zoba =vessel) | (driver= mv_xoba_pedawan & xoba_padawan =vessel) | (driver= mv_yoba_pedawan & yoba_padawan =vessel) | (driver= mv_xoba_pedawan & zoba_padawan =vessel)) : isi;
		TRUE:vessel;
	esac; 

	next(xoba_padawan) := case 
					(driver = mv_xoba_pedawan | passenger = mv_xoba_pedawan)  & (xoba_padawan=vessel) : next(vessel);
	
					TRUE : xoba_padawan ;
			esac; 
	
	next(yoba_padawan) := case 
					(driver = mv_yoba_pedawan | passenger = mv_yoba_pedawan) & (yoba_padawan=vessel): next(vessel);
					TRUE : yoba_padawan ;  
			esac; 
	
	next(zoba_padawan) := case 
					(driver = mv_zoba_pedawan | passenger = mv_zoba_pedawan)  & (zoba_padawan=vessel) : next(vessel);

					TRUE : zoba_padawan ; 
			esac; 

	next(xoba) := case 
					(driver = mv_xoba | passenger = mv_xoba) & (xoba=vessel) :  next(vessel);

					TRUE : xoba ; 
			esac; 
	
	next(yoba) := case 
					 (driver = mv_yoba | passenger = mv_yoba) & (yoba=vessel) :   next(vessel);

					TRUE : yoba ; 
			esac; 
	
	next(zoba) := case 
				    (driver = mv_zoba | passenger = mv_zoba) & (zoba=vessel):  next(vessel);

					TRUE : zoba ; 
			esac; 
	

SPEC  !E [((((xoba_padawan = yoba) | (xoba_padawan =  zoba)) -> (xoba_padawan = xoba)) & (((yoba_padawan = xoba) | (yoba_padawan = zoba)) -> (yoba_padawan = yoba))  & (((zoba_padawan = xoba) | (zoba_padawan= yoba)) -> (zoba_padawan = zoba)) ) U (xoba = iju & xoba_padawan = iju & yoba = iju & yoba_padawan = iju & zoba=iju & zoba_padawan = iju)]
